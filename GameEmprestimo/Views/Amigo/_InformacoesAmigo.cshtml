
@model AmigoViewModel
<div class="modal fade" id="modalAmigo" tabindex="-1" role="dialog" aria-labelledby="modalAmigo" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Amigo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form id="formModalAmigo">
                        @Html.Hidden("hddCodigo", Model.Codigo)
                        @*<input type="hidden" asp-for="Codigo" id="hddCodigo" />*@
                        <div class="form-group">
                            @Html.LabelFor(a => a.Nome, new { @class = "col-md-2 control-label"})
                            @*<label asp-for="Nome" class="col-md-2 control-label"></label>*@
                            <div class="col-md-10">
                                @Html.TextBoxFor(a => a.Nome, new { @class = "form-control required" , id= "txtNomeAmigo", maxlength = "100" })
                                @*<input asp-for="Nome" class="form-control required" id="txtNomeAmigo" maxlength="100" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(a => a.Celular, new { @class = "col-md-2 control-label" })
                            @*<label asp-for="Celular" class="col-md-2 control-label"></label>*@
                            <div class="col-md-10">
                                @Html.TextBoxFor(a => a.Celular, new { @class = "form-control required", id = "txtCelularAmigo", maxlength = "15" })
                                @*<input asp-for="Celular" class="form-control required" id="txtCelularAmigo" maxlength="15" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(a => a.Email, new { @class = "col-md-2 control-label" })
                            @*<label asp-for="Email" class="col-md-2 control-label"></label>*@
                            <div class="col-md-10">
                                @Html.TextBoxFor(a => a.Email, new { @class = "form-control required", id = "txtEmailAmigo", maxlength = "50" })

                                @*<input asp-for="Email" class="form-control" id="txtEmailAmigo" maxlength="50" />*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" id="btnSalvarAmigo">Salvar</button>
            </div>
        </div>
    </div>
</div>